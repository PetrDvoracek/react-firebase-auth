{
  "plugins": [
    "react",
    "cypress"
  ],
  "env": {
    "es6": true,
    "node": true,
    "commonjs": true,
    "mocha": true,
    "browser": true,
    "cypress/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2019
  },
  "rules": {
    "newline-per-chained-call": 1,
    "react/prop-types": 0,
    "indent": [
      "warn",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "padded-blocks": [
      "warn",
      "never"
    ],
    "space-in-brackets": ["error", "always"]
  }
}